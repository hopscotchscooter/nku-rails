
<table class="table">
  <thead>
    <tr>
      <th>Attended on</th>
      <th>Seat number</th>
      <th>Student Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.attended_on %></td>
        <td><%= attendance.seat_number %></td> 
        <td><%= link_to attendance.student.name, attendance %></td>
        <td><%= link_to 'Delete', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_attendance_path %>
