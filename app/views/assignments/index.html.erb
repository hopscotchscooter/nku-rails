<h1>My Assignments</h1>
<table class="table">
  <thead>
    <tr>
      <th>Assignment Name</th>
      <th>Score</th>
      <th>Total</th>
      <th>Percentage</th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
        <tr id="<%= dom_id(attendance) %>">
        <td><%= assignment.name %></td>
        <td><%= assignment.score %></td>
        <td><%= assignment.total %></td>
        <td><%= assignment.score / assignment.total %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to 'Return to Bueller', root_path %>